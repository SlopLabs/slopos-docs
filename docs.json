{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "SlopOS",
  "colors": {
    "primary": "#8B5CF6",
    "light": "#A78BFA",
    "dark": "#7C3AED"
  },
  "appearance": {
    "default": "dark",
    "strict": true
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Documentation",
        "groups": [
          {
            "group": "Getting Started",
            "pages": [
              "index",
              "quickstart"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "GitHub",
          "href": "https://github.com/SlopLabs/slopos",
          "icon": "github"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/logo.png",
    "dark": "/logo/logo.png",
    "height": 60
  },
  "navbar": {
    "links": [
      {
        "label": "GitHub",
        "href": "https://github.com/SlopLabs/slopos"
      }
    ]
  },
  "footer": {
    "socials": {
      "github": "https://github.com/SlopLabs/slopos"
    }
  }
}
